{% for label, messages in app.flashes %}
    {% for message in messages %}
        {% if label == 'success' %}
            <div class="flex items-center p-4  text-green-800 rounded-lg bg-green-50" role="alert">
        {% endif %}   
        {% if label == 'warning' %}  
            <div class="flex items-center p-4  text-red-800 rounded-lg bg-red-50" role="alert">
        {% endif %}    
            <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"  viewbox="0 0 20 20">
              <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
            </svg>
            <span class="sr-only">Info</span>
            <div class="ms-3 text-sm font-medium">
                {{ message|raw }}
            </div>
          </div>
    {% endfor %}
{% endfor %}
