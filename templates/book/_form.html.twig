{{ form_errors(form) }}

<div class="w-full  bg-zinc-200 ">

    {{ form_start(form, {'attr': {'class': 'p-5 flex flex-col max-w-xl mx-auto'}}) }}
        {{ form_label(form.title, null, {'label_attr': {'class': 'px-5 mb-1 font-semibold'}}) }}
        {{ form_widget(form.title,{'attr': {'class': 'font-semibold px-2 rounded'}}) }}
    
        {{ form_label(form.kinds, null, {'label_attr': {'class': 'px-5 mb-1 py-1 text-xl '}}) }}
        {{ form_widget(form.kinds) }}
    
        {{ form_label(form.description, null, {'label_attr': {'class': 'mt-3 px-5 mb-1 '}}) }}
        {{ form_widget(form.description,{'attr': {'class': 'min-h-[250px] bg-indigo-200 w-75 md:w-50 p-6','row':'18'}}) }}    

    <div class="text-right p-3">
        <button type="submit" class="btn-primary w-[200px] bg-green-800 text-white">Valider</button>
    </div>
    {{ form_end(form) }}
</div>




